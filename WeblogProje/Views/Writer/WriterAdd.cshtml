@model WeblogProje.Models.AddProfileImage

@{
    ViewData["Title"] = "WriterAdd";
    Layout = "~/Views/Shared/WriterLayout.cshtml";
}

<form class="form-group" method="post" enctype="multipart/form-data">
    <div class="col-12 grid-margin stretch-card">
        <div class="card">
            <div class="card-body">
                <h4 class="card-title">Yazar Ekle</h4>
                <div class="forms-sample" asp-action="WriterEditProfile" asp-controller="Writer" method="post">
                    <div class="form-group">
                        <input type="hidden" class="form-control" asp-for="WriterID" readonly />
                        <label for="exampleInputName1">Yazar Ad Soyad</label>
                        <input type="text" class="form-control" id="exampleInputName1" asp-for="WriterName">
                        <span asp-validation-for="WriterName" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label for="exampleInputEmail3">Mail Adresi</label>
                        <input type="email" class="form-control" id="exampleInputEmail3" asp-for="WriterEmail">
                        <span asp-validation-for="WriterEmail" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label for="exampleInputPassword4">Password</label>
                        <input type="password" class="form-control" id="exampleInputPassword4" asp-for="WriterPassword">
                        <span asp-validation-for="WriterPassword" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label>Yazar Görsel</label>
                        <input type="file" asp-for="WriterImage" />
                    </div>
                    <div class="form-group">
                        <label for="exampleTextarea1">Yazar Hakkında</label>
                        <textarea class="form-control" id="exampleTextarea1" rows="4" asp-for="WriterAbout"></textarea>
                    </div>
                    <button type="submit" class="btn btn-gradient-primary mr-2">Kaydet</button>
                    <button class="btn btn-light">İptal</button>
                </div>
            </div>
        </div>
    </div>
</form>
